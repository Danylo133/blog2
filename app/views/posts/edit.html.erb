<h1>Editing article</h1>

<%= form_for :post, remote: true, url: post_path(@post), method: :patch do |post| %>

    <% if @post.errors.any? %>
        <div id="errors_explanation">
          <h2>
            <%= pluralize(@post.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= post.label :title %><br>
      <%= post.text_field :title %>
    </p>

    <p>
      <%= post.label :text %><br>
      <%= post.text_area :text %>
    </p>

    <p>
      <%= post.collection_select :category_id, @categories, :id, :name, prompt: true %><br>
    </p>

    <p>
      <%= post.submit %>
    </p>
<% end %>

<%= link_to 'Back', posts_path %>