<h1>New Post</h1>
<%= form_for :post, url: posts_path do |p| %>

    <% if @post.errors.any? %>
        <div id="errors_explanation">
          <h2>
            <%= pluralize(@post.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= p.label :title %><br>
      <%= p.text_field :title %>
    </p>

    <p>
      <%= p.label :text %><br>
      <%= p.text_area :text %>
    </p>
    <p>
      <%= p.collection_select :category_id, @categories, :id, :name, prompt: true %><br>
    </p>

    <p>
      <%= p.submit %>
    </p>
<% end %>

<%= link_to 'Back', posts_path %>