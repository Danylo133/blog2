<h1>Posts by <%= @category.name %> category  </h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
  <% @posts.each do |post| %>
      <tr>
        <td><%=  link_to post.title, post_path(post) %></td>
        <td><%= post.text %></td>

      </tr>
  <% end %>
</table>
<p>
  <%= link_to 'Back', posts_path %>
</p>
