<h1>Posts by  <%= @user.name %> </h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Category</th>
  </tr>
  <% @posts.each do |post| %>
      <tr>
        <td><%=  link_to post.title, post_path(post) %></td>
        <td><%= post.text %></td>
        <td><%= post.category.name %></td>
      </tr>
  <% end %>
</table>
<p>
  <%= link_to 'Back', posts_path %>
</p>